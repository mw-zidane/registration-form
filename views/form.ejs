    <style>
        /* Modal Styling */
        .modal {
            display: none;
            position: fixed;
            z-index: 100;
            left: 0;
            top: 0;
            width: 100%;
            height: 100%;
            overflow: auto;
            background-color: rgba(0,0,0,0.5);
            animation: fadeIn 0.5s ease;
        }

        .modal-content {
            background-color: #fff;
            margin: 10% auto;
            padding: 30px;
            border: 1px solid #ccc;
            border-radius: 12px;
            width: 80%;
            max-width: 400px;
            text-align: center;
            animation: slideUp 0.4s ease;
        }

        .modal-content .icon span {
            font-size: 60px;
            color: green;
            display: block;
            margin-bottom: 15px;
        }

        .modal-content h2 {
            margin-bottom: 10px;
            color: #2c3e50;
        }

        .modal-content p {
            font-size: 16px;
        }

        #closeModal {
            background-color: green;
            color: white;
            padding: 10px 20px;
            border: none;
            border-radius: 8px;
            margin-top: 15px;
            cursor: pointer;
            transition: background 0.3s;
        }

        #closeModal:hover {
            background-color: #2e8b57;
        }

        /* Animations */
        @keyframes fadeIn {
            from {opacity: 0;}
            to {opacity: 1;}
        }

        @keyframes slideUp {
            from {transform: translateY(100px); opacity: 0;}
            to {transform: translateY(0); opacity: 1;}
        }
    </style>


